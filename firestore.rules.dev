rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - More permissive for testing
    // WARNING: Do not use these rules in production!
    
    // Test collection - allow all operations for development
    match /test/{testId} {
      allow read, write: if true; // Allow all access for testing
    }
    
    // User-specific data - only accessible by the owner
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Study packs - read public ones, write only your own
    match /study_packs/{packId} {
      allow read: if request.auth != null && (resource.data.isPublic == true || resource.data.createdBy == request.auth.uid);
      allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow create: if request.auth != null;
    }
    
    // Quizzes - similar rules to study packs
    match /quizzes/{quizId} {
      allow read: if request.auth != null && (resource.data.isPublic == true || resource.data.createdBy == request.auth.uid);
      allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow create: if request.auth != null;
    }
    
    // Quiz results - only accessible by the owner
    match /quiz_results/{resultId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Flashcards - readable by anyone with access to the study pack
    match /flashcards/{flashcardId} {
      allow read, write: if request.auth != null;
    }
    
    // Flashcard progress - only accessible by the owner
    match /flashcard_progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}
